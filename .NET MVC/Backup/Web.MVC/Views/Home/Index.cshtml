@using Web.Mvc.Model
@{
    Layout = null;
    ViewBag.Title = "Index";
    List<PPTItem> itemList = ViewData["PPTItems"] as List<PPTItem>;
    string className = @ViewData["classname"].ToString();
}
<!DOCTYPE html>
<!--[if IE 8 ]>
    <html class="ie8 lt-ie9 lt-ie10">
<![endif]-->
<!--[if IE 9 ]>
    <html class="ie9 lt-ie10">
<![endif]-->
<!--[if (gt IE 9)|!(IE)]>
<html>
<![endif]-->
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="" />
    <meta name="description" content="" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <script src="/dist/js/flexible.min.js" type="text/javascript"></script>
    <script src="/dist/js/jquery-1.7.2.min.js" type="text/javascript"></script>
    <script src="/dist/js/style.min.js" type="text/javascript"></script>
    <link href="/dist/css/style.min.css" rel="stylesheet" />
    <link href="/dist/css/search.min.css?20171125" rel="stylesheet" />
    <title>PPT下载</title>
</head>
<body>
    <!-- Main S -->
    <main>
        <div class="search-result">        
            <div class="search-result-type video-type">
                <div>
                  <div><a href="@Html.ActionUrl("home", "Index", new { classname = "通用资源" })" target="_self" class="@(className == "通用资源" ? "active" : null)">通用资源</a></div>
                  <div><a href="@Html.ActionUrl("home", "Index", new { classname = "产品介绍" })" target="_self" class="@(className == "产品介绍" ? "active" : null)">产品介绍</a></div> 
                  <div><a href="@Html.ActionUrl("home", "Index", new { classname = "行业案例" })" target="_self" class="@(className == "行业案例" ? "active" : null)">行业案例</a></div>
                  <div><a href="@Html.ActionUrl("home", "Index", new { classname = "其他" })" target="_self" class="@(className == "其他" ? "active" : null)">其他</a></div>                
                </div>
            </div>
            <div class="search-result-count video-count"></div>
            <div>       
                <ul class="search-result-videolist video-index">
                   @foreach (PPTItem item in itemList)
                   {
                       if (item.visible)
                       {
                            @:<li>
                                @:<a href="@item.pptSrc" target="_self">
                                    @:<img src="@(item.thumbnailSrc)" alt="ppt"/>
                                    @:<span class="video-icon"></span>
                                    @:<span class="video-title">标题：@item.title</span>
                                    @:<p>作者：@item.author</p>
                                    @:<p>有效期至：@item.validDate</p>
                                    @:<p>描述：@item.description</p>
                                @:</a>
                            @:</li>
                        }
                   }   
                </ul>
            </div>
        </div>
    </main>
    <!-- Main S -->
</body>
</html>

